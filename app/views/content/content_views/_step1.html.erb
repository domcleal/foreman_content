<%= javascript 'content/content.js' %>
<%= form_for @content_view, :url => content_views_path do |f| %>
  <%= base_errors_for @content_view %>
  <%= wizard_header 1, _("Select origin"), _("Create") %>
  <%= alert :class => 'controls alert-success', :header => 'Select operating systems or product',
            :text  => _('Please select an operating system or a product.') %>
  <%= field(f, :oparatingsystem, :label => _('Role')) do
      radio_button_f(f, :operatingsystem, :value=>'operatingsystem', :checked=> true, :onchange=>'toggleOsProduct(this)', :text=> _("Operating system"))+
      radio_button_f(f, :operatingsystem, :value=>'product', :checked=> false, :onchange=>'toggleOsProduct(this)', :text=> _("Product"))
    end %>
  <%= select_f f, :operatingsystem_id, ::Redhat.all, :id, :to_label, {}, {:label => _("Operating System")} %>
  <%= select_f f, :product_id, Content::Product.all, :id, :name, {}, {:disabled=>true, :label => _("Product")} %>
  <%= submit_or_cancel f %>
<% end %>
